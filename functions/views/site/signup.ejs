<section>
    <div class="container mt-5 col-sm-10 col-md-6 col-lg-4 p-5">             
        <form class="form-signup" action="/admin/signup" method='POST' >
            <div class="text-center mb-4">        
                <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>        
            </div>  
            <div class="form-label-group">
                <input type="text" class="form-control" placeholder="Name" autofocus required>
                <label for="inputName">Name </label>
            </div>         

            <div class="form-label-group">
                <input type="email" class="form-control" placeholder="Email address"  autofocus required>
                <label for="inputEmail">Email</label>
            </div>

            <div class="form-label-group">
                <input type="password" class="form-control" placeholder="Password" name="password" id="password"  required>
                <label for="inputPassword">Password</label>
            </div>   

            <div class="form-label-group">
                <input type="password" class="form-control" placeholder="Confirm password" name="password2" id="password2"  required>
                <label for="inputPassword">Confirm Password</label>
            </div>     
         
            <button class="btn btn-lg btn-primary btn-block mb-3" type="submit">Sign up</button>
        </form>
    </div>
</section>


 
   
  
    
            

                    
                   

                    