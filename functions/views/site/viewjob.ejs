<section class="bg-light m-4 p-4" >
    <div class="container-fluid">        
        <div class="row justify-content-center">
            <div class="col-md-6 col-sm-8">
                <div class="card">
                    <div class="card-header bg-success">
                        <h3 class="text-black"><%=jobPost.name%></h3>
                    </div>
                    <div class="card-body">                    
                        <h4 class="card-title py-3"><strong><%=jobPost.title %></strong></h4>
                        <div class="card">
                            <div class="card-body">
                                <h5><strong>Location:</strong> <%=jobPost.location %> </h5>
                                <h5 class="text-danger"><strong>Contact:</strong> <%=jobPost.tel%></h5>
                              
                            </div>
                        </div>                     
                        <br>
                        <h5>Compensation </h5>                            
                        <p class="card-text"> <%= jobPost.compensation %> </p> 
                        
                        <h5>Schedule </h5>
                        <p class="card-text"><%= jobPost.schedule %></p> 
                        <hr>
                        
                        <h5>Requirements</h5>    
                        <p class="card-text"><%=jobPost.requirements %></p>
                        <h5>Description</h5>
                        <p class="card-text"><%=jobPost.description %></p>  
                        
                        <%-include('./applyjob') %>
                        
                         <!-- Button trigger modal -->
                         <button type="button" class="btn btn-primary btn-lg float-right" id="applyBtn">
                            <strong>APPLY HERE!</strong>
                        </button><br><br>               
                    </div>
                </div>                
            </div>
        </div>
    </div>        
</section>    

<script type="application/javascript">

    $(document).ready(() => {

        $("#applyBtn").on('click', (e) => {
            //show the modal
            jQuery.noConflict()
            $("#applyJobModal").modal('show')
        })
    })

</script>

<style scoped>
.card-text {
    white-space: pre-wrap;
}
</style>